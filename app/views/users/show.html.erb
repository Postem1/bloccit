<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

<% if @user.posts.any? %>
    <h2>Posts</h2>
   <%= render @user.posts %>
<% else %>
<%= "#{@user.name} has not created any posts yet." %>
<% end %>
<br>

<% if @user.favorites.any? %>
  <h2>Favorites</h2>
    <%= render partial: 'users/favorites' %>
<% else %>
    <%= "#{@user.name} has not submitted any favorites yet." %>
<% end %>
<br>

<% if @user.comments.any? %>
   <h2>Comments</h2>
   <%= render @user.comments %>
<% else %>
<%= "#{@user.name} has not commented on any posts  yet." %>
<% end %>
